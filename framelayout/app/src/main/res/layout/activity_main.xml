<?xml version="1.0" encoding="utf-8"?>
<!-- 
    MSBTE Course: 316006 - Mobile Application Development
    Practical: Implementation of Frame, Table, and Relative Layouts
    
    This layout demonstrates an E-commerce Product Detail Page using three key layouts.
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 
            SECTION 1: FRAME LAYOUT
            What is it? A layout that stacks children on top of each other (Z-axis).
            When to use it? To create overlays, like text on images, or badges.
            How? The last view added appears on top.
        -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Frame Layout Example (Overlay Badge)"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/light_gray">

            <!-- Base Layer: Product Image Placeholder -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@android:drawable/ic_menu_report_image" />

            <!-- Overlay Layer: "SALE" Badge (Positioned Top-Left) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:padding="8dp"
                android:text="SALE - 50% OFF"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="top|start" />

            <!-- Overlay Layer: Favorite Icon (Positioned Top-Right) -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/btn_star_big_on"
                android:layout_gravity="top|end"
                android:layout_margin="8dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="16dp"/>

        <!-- 
            SECTION 2: RELATIVE LAYOUT
            What is it? A layout where views are positioned relative to the parent or sibling views.
            When to use it? For complex arrangements where views need to be "to the left of" or "below" others.
            How? Use attributes like 'layout_below', 'layout_toEndOf', etc.
        -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Relative Layout Example (Product Info)"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9F9"
            android:padding="12dp">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Wireless Headphones"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$199.99"
                android:textColor="@color/purple_500"
                android:layout_below="@id/product_name"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@id/product_price"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginVertical="16dp"/>

        <!-- 
            SECTION 3: TABLE LAYOUT
            What is it? Arranges children into rows and columns.
            When to use it? For displaying structured data like specifications or price lists.
            How? Use TableRow tags to define rows; views inside rows become columns.
        -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Table Layout Example (Product Specs)"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"> <!-- Column 1 (Value) will take extra space -->

            <!-- Table Header Row -->
            <TableRow android:background="@color/light_gray" android:padding="4dp">
                <TextView android:text="Feature" android:textStyle="bold" android:padding="8dp"/>
                <TextView android:text="Details" android:textStyle="bold" android:padding="8dp"/>
            </TableRow>

            <!-- Data Row 1 -->
            <TableRow android:padding="4dp">
                <TextView android:text="Battery" android:padding="8dp"/>
                <TextView android:text="40 Hours Playback" android:padding="8dp"/>
            </TableRow>

            <!-- Data Row 2 -->
            <TableRow android:padding="4dp">
                <TextView android:text="Bluetooth" android:padding="8dp"/>
                <TextView android:text="Version 5.2" android:padding="8dp"/>
            </TableRow>

            <!-- Data Row 3 -->
            <TableRow android:padding="4dp">
                <TextView android:text="Weight" android:padding="8dp"/>
                <TextView android:text="250 Grams" android:padding="8dp"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>